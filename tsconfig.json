{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/pages/ninjas/[id].jsx",
    "comps/Navbar.jsx",
    "comps/Layout.jsx",
    "comps/footer.jsx",
    "src/pages/index.tsx",
    "src/pages/about.tsx",
    "src/pages/404.tsx",
    "src/pages/_document.jsx",
    "src/pages/_app.tsx"
  ],
  "exclude": ["node_modules"]
}
